---
import "../styles/animations.css";
import "../styles/scrollbar.css";
import "../styles/transitions.css";
import "../styles/searchbar.css";
import "../styles/darkmode.css";
import "../styles/accessibility.css";
import "overlayscrollbars/overlayscrollbars.css";
// Removed theme-transitions.css - now inlined in GlobalStyles for guaranteed loading
---

<style is:global>
  :root {
    --hue: 300;

    /* Fallback colors for browsers that don't support oklch */
    --primary-color: #b366cc;
    --primary-color-lighten: #f5ecf9;
    --primary-color-hover: #ede4f2;
    --primary-color-transparent: rgba(179, 102, 204, 0.15);
    --text-color: #333333;
    --text-color-lighten: #808080;
    --card-color: #ffffff;
    --card-color-transparent: rgba(255, 255, 255, 0.85);
    --background-color: #f7f5f8;

    /* Modern browsers with oklch support */
    --primary-color: oklch(70% 0.15 var(--hue));
    --primary-color-lighten: oklch(95% 0.02 var(--hue));
    --primary-color-hover: oklch(90% 0.025 var(--hue));
    --primary-color-transparent: oklch(70% 0.15 var(--hue) / 15%);
    --text-color: oklch(30% 0 0);
    --text-color-lighten: oklch(50% 0 0);
    --card-color: oklch(100% 0 0);
    --card-color-transparent: oklch(100% 0 0 / 85%);
    --background-color: oklch(97% 0.01 var(--hue));

    --brand-font: "Raleway", "Noto Sans SC", sans-serif;
    --primary-font: "Noto Sans SC", sans-serif;
    --code-font: "JetBrains Mono", "Fira Code", monospace;

    --page-width-lg: 992px;
    --page-width-xl: 1264px;

    --banner-height: 55vh;
    --title-font: var(--brand-font);
    --title-color: oklch(100% 0 0 / 95%);
    --subtitle-font: var(--brand-font);
    --subtitle-color: oklch(100% 0 0 / 85%);

    --onload-animation-delay: 100ms;
    --onload-animation-interval: 100ms;
  }

  :root.dark,
  html.dark {
    /* Fallback colors for browsers that don't support oklch */
    --primary-color: #b366cc;
    --primary-color-lighten: #665580;
    --primary-color-hover: #332940;
    --text-color: #f2f2f5;
    --text-color-lighten: #e6e6e9;
    --card-color: #403340;
    --card-color-lighten: #665580;
    --card-color-transparent: rgba(64, 51, 64, 0.85);
    --background-color: #2a242d;

    /* Modern browsers with oklch support */
    --primary-color: oklch(70% 0.125 var(--hue));
    --primary-color-lighten: oklch(40% 0.04 var(--hue));
    --primary-color-hover: oklch(20% 0.015 var(--hue));
    --text-color: oklch(95% 0.002 var(--hue));
    --text-color-lighten: oklch(90% 0.002 var(--hue));
    --card-color: oklch(25% 0.02 var(--hue));
    --card-color-lighten: oklch(40% 0.04 var(--hue));
    --card-color-transparent: oklch(30% 0.025 var(--hue) / 85%);
    --background-color: oklch(17.5% 0.015 var(--hue));
  }

  .swup-progress-bar {
    height: 5px;
    background-color: var(--primary-color);
  }

  /* Force body styles for dark mode */
  body {
    background-color: var(--background-color);
    color: var(--text-color);
  }

  html.dark body,
  :root.dark body {
    background-color: var(--background-color);
    color: var(--text-color);
  }

  /* ===== THEME TRANSITIONS - SMART STRATEGY ===== */
  /* Only disable theme-related transitions by default, not ALL transitions */
  
  /* Disable theme transitions by default to prevent conflicts */
  *:not(a):not(button):not(input):not(.transition-leaving) {
    transition-property: none;
  }
  
  /* Keep interactive element transitions always active */
  a,
  button,
  input,
  select,
  textarea,
  [role="button"],
  .transition-leaving {
    /* Allow hover/focus transitions to work normally */
    transition-property: opacity, transform, box-shadow;
    transition-duration: 0.2s;
    transition-timing-function: ease;
  }
  
  /* Enable theme transitions ONLY when switching themes */
  html.theme-transitioning *,
  html.theme-transitioning *::before,
  html.theme-transitioning *::after {
    transition: background-color 0.3s ease,
                color 0.3s ease,
                border-color 0.3s ease !important;
  }
  
  /* View Transitions API support (Chrome/Edge) */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 0.3s;
  }
</style>
